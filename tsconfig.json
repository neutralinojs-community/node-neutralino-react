{
  "compilerOptions": {
    "target": "es2016",                                  
    "module": "commonjs",                                
    "rootDir": "./",                    
    "outDir": "./node-src/dist/",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,                                       
    "skipLibCheck": true                                 
  },
  "exclude": [
    "react-src"
  ]
}